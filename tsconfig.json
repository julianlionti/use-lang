{
    "compilerOptions": {
      "target": "es5",
      "module": "ES2015",
      "lib": ["es6", "DOM"],
      "outDir": "build",
      "rootDir": "src",
      "jsx": "react",
      "strict": true,
      "declaration": true,
      "declarationDir": "./build",
      "noImplicitAny": true,
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "typeRoots": ["./src/typings", "./node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["**/example"]
  }
  